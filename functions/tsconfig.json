{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": ["src", "tests"],
  "exclude": [
    "./node_modules/",
  ],
}
